	<section class="catalog-results">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<h2>Результаты</h2>
				</div>
				<div class="col-lg-6">
					<select>
					<option value="" selected disabled hidden>Сортировка по</option>
				   	<option value="value1">Популярности</option>
					<option value="value2">Стоимости</option>
			  	</select>
				</div>
				{{#each salons}}
				<div class="col-lg-6">
					<div class="popular-item">
						<div class="popular-item-photo">
							<img src={{this.image}}>
							<p>Рейтинг/Отзывы</p>
						</div>
						<div class="popular-item-desc">
							<h5><b>Название</b></h5>
							<div class="popular-item-desc-text">
								<p style="color: #A7A7A7">{{this.occupation}}</p>
								<br>

								<p>пн-пт: с {{this.fromTime}} до {{this.tillTime}}</p>
								<p>сб-вс: с {{this.fromTime}} до {{this.tillTime}}/p>
								<br>
								<p>{{this.link}}</p>
								<br>
							</div>
							<button>ЗАПИСАТЬСЯ</button>
						</div>
					</div>
				</div>
				{{else}}
    				<h2>Салоны не найдены</h2>
				{{/each}}

				
			</div>
		</div>
	</section>